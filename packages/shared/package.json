{
  "name": "@ephemera/shared",
  "version": "1.2.2",
  "description": "Shared types, schemas, and utilities for Ephemera monorepo",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas.d.ts",
      "import": "./dist/schemas.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "generate:client": "openapi-typescript http://localhost:8286/api/openapi.json -o src/generated/api.ts"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "openapi-typescript": "^7.4.4",
    "typescript": "^5.7.2"
  }
}
