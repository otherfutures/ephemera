{
  "name": "@ephemera/api",
  "version": "1.2.2",
  "description": "API for Ephemera search and download functionality",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:node": "pnpm run build && node --watch dist/index.js",
    "dev:clean": "pnpm run kill && pnpm run dev:node",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:clean": "pnpm run kill && pnpm run build && pnpm start",
    "kill": "pkill -9 -f 'dist/index.js' 2>/dev/null || true; sleep 1",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist storage .crawlee"
  },
  "keywords": [
    "ephemera",
    "books",
    "api",
    "scraper"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ephemera/shared": "workspace:*",
    "@hono/node-server": "^1.19.6",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^0.18.4",
    "better-sqlite3": "^11.7.0",
    "cheerio": "^1.1.2",
    "crawlee": "^3.12.4",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.6.14",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5",
    "drizzle-kit": "^0.28.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
