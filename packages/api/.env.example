# Server Configuration
PORT=3000
HOST=0.0.0.0

# AA API
AA_API_KEY=your_secret_key_here
AA_BASE_URL=yourarchiveurl.org

# Paths
DOWNLOAD_FOLDER=/path/to/final/books
TEMP_DOWNLOAD_FOLDER=./downloads
DB_PATH=./data/database.db

# Download Settings
MAX_CONCURRENT_DOWNLOADS=1
RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=30000

# Cache Settings (optional)
SEARCH_CACHE_TTL=300

# Encryption Key (Required for Booklore OAuth2 authentication)
# Generate with: openssl rand -hex 32
# IMPORTANT: Keep this secret and never commit to git!
ENCRYPTION_KEY=

# Booklore Integration
# Configure Booklore via the API at /api/booklore/settings
# Environment variables are no longer used for Booklore configuration
