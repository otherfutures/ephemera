{
  "name": "@ephemera/root",
  "version": "1.1.7",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:api": "pnpm --filter @ephemera/api dev",
    "dev:web": "pnpm --filter @ephemera/web dev",
    "dev:clean": "pnpm kill && pnpm --parallel -r dev",
    "dev:api:clean": "pnpm --filter @ephemera/api dev:clean",
    "kill": "pnpm --filter @ephemera/api kill",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @ephemera/api build",
    "build:web": "pnpm --filter @ephemera/web build",
    "type-check": "pnpm -r type-check",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r clean",
    "db:generate": "pnpm --filter @ephemera/api db:generate",
    "db:migrate": "pnpm --filter @ephemera/api db:migrate",
    "db:studio": "pnpm --filter @ephemera/api db:studio",
    "changeset": "node scripts/create-changeset.js",
    "changeset:status": "changeset status --verbose",
    "version": "changeset version && node -e \"const fs=require('fs');const pkg=JSON.parse(fs.readFileSync('package.json'));const apiPkg=JSON.parse(fs.readFileSync('packages/api/package.json'));pkg.version=apiPkg.version;fs.writeFileSync('package.json',JSON.stringify(pkg,null,2)+'\\n')\" && git add . && git commit -m 'chore: version packages'",
    "version:check": "changeset status",
    "release": "pnpm run version && pnpm run tag && pnpm run push",
    "tag": "node scripts/create-tag.js",
    "push": "git push && git push --tags",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0",
      "bash -c 'pnpm type-check'"
    ]
  }
}
